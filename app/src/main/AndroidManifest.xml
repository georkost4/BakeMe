<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dsktp.sora.bakeme">

    <uses-permission android:name="android.permission.INTERNET"> </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.MainScreenActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Widget.WidgetUpdateService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.dsktp.sora.bakeme.widget.widgetupdateservice.update_app_widget"/>
                <action android:name="com.dsktp.sora.bakeme.widget.widgetupdateservice.update_app_widget_list"/>
            </intent-filter>
        </service>

        <service
            android:name=".Widget.ListViewWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".Widget.RecipeWidgetProvider">
                        <intent-filter>
                            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                        </intent-filter>

                        <meta-data
                            android:name="android.appwidget.provider"
                            android:resource="@xml/recipe_widget_info" />
                    </receiver>


    </application>

</manifest>